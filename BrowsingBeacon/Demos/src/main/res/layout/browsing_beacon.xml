<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/explain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="THis Tell you what loaction you are near by"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/beacon"
        android:background="@drawable/beacon_gray"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/explain"
        android:layout_margin="40dp"/>

    <TextView
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="5dp"
        android:background="@android:color/holo_orange_dark"
        android:textColor="@android:color/white"
        android:text="Location"
        android:textSize="25sp"
        android:layout_below="@id/beacon"
        />

    <TextView
        android:id="@+id/locationArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:padding="5dp"
        android:background="@android:color/holo_orange_light"
        android:textColor="@android:color/black"
        android:text="No Location Found"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/location"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signalStrenght"
        android:layout_below="@id/locationArea"
        android:layout_centerHorizontal="true"
        android:text="0.00"
        android:textColor="#000000"
        android:textSize="40sp"
        android:layout_margin="30dp"/>

</RelativeLayout>